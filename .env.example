# Environment Variables for Legal Chatbot Project

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=legalbot
DB_USER=postgres
DB_PASSWORD=password
DB_MAX_CONNECTIONS=20

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# AI Provider Configuration
DEFAULT_AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_TEMPERATURE=0.7

# Application Configuration
APP_NAME=Legal Chatbot
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5000

# Processing Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# Workflow Configuration
DEFAULT_PHASE=INFO_COLLECTION
AUTO_TRANSITION=true
PHASE_TIMEOUT=1800

# WeChat Automation Configuration
WECHAT_AUTOMATION_ENABLED=true
AUTOMATION_MACHINE_ID=default-machine
AUTOMATION_HEARTBEAT_INTERVAL=30

# Admin Panel Configuration
ADMIN_PANEL_URL=http://localhost:3001
ADMIN_PANEL_SECRET=your-admin-panel-secret

# Web Server Configuration
WEB_SERVER_PORT=5000
WEB_SERVER_DEBUG=true

# RAG Configuration
RAG_ENABLED=true
RAG_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT=86400
CORS_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx

# Email Configuration (optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=Legal Chatbot <noreply@legalbot.com>

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Configuration
HOT_RELOAD=true
AUTO_MIGRATION=true
SEED_DATA=true
